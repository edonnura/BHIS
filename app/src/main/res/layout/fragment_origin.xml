<?xml version="1.0" encoding="utf-8"?>
  <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".OriginFragment">

    <com.riyagayasen.easyaccordion.AccordionView
        android:id="@+id/accordion1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:visibility="visible"
        app:isAnimated="false"
        app:heading="Origjina"
        app:isExpanded="true"
        app:isPartitioned="true"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/tvRegisterNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="" />

        <TextView
            android:id="@+id/tvPatientOrigin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prejardhja e pacientit:"
            android:layout_below="@id/tvRegisterNumber"/>
        <TextView
            android:id="@+id/tvPatientOriginValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/tvPatientOrigin"/>

        <TextView
            android:id="@+id/tvPatientState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gjendja e pacientit:"
            android:layout_below="@id/tvPatientOriginValue"/>
        <TextView
            android:id="@+id/tvPatientStateValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/tvPatientState"/>

        <TextView
            android:id="@+id/tvTreatmentType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menyra e trajtimit:"
            android:layout_below="@id/tvPatientStateValue"/>
        <TextView
            android:id="@+id/tvTreatmentTypeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/tvTreatmentType"/>
        <TextView
            android:id="@+id/tvInstitution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Institucioni:"
            android:layout_below="@id/tvTreatmentTypeValue"/>
        <TextView
            android:id="@+id/tvInstitutionValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/tvInstitution"/>
        <TextView
            android:id="@+id/tvTrafficAccident"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aksident ne komunikacion:"
            android:layout_below="@id/tvInstitutionValue"/>
        <TextView
            android:id="@+id/tvTrafficAccidentValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/tvTrafficAccident"/>

    </com.riyagayasen.easyaccordion.AccordionView>
    <com.riyagayasen.easyaccordion.AccordionView
        android:layout_below="@id/accordion1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:visibility="visible"
        app:isAnimated="false"
        app:heading="Ekzaminimi"
        app:isExpanded="false"
        app:isPartitioned="true"
        android:layout_marginTop="5dp">
        <ListView
            android:id="@+id/lvExamination"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
    </com.riyagayasen.easyaccordion.AccordionView>
</RelativeLayout>